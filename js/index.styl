@import 'bootstrap/normalize'
@import 'bootstrap/variables'
@import 'bootstrap/mixins'
@import 'bootstrap/type'

$default-font-size = 14px
$default-line-height = 1.78
$heading1-font-size = 30px
$heading2-font-size = 25px
$heading3-font-size = 20px
$heading4-font-size = 16px
$heading5-font-size = 14px
$heading-line-height = 1.5
$list-line-height = 2.14
$blockquote-border-left-color = rgba(#333, 0.08)
$toolbar-selected-background-color = rgba(#333, 0.08)
$toolbar-hover-background-color = rgba(#333, 0.04)

body
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  padding: 0
  margin: 0

figure
  margin: 0

img
  max-width: 100%

.rich-text-editor
  &.RichEditor-hidePlaceholder
    .public-DraftEditorPlaceholder-root
      display: none
  .public-DraftEditorPlaceholder-root
    color: rgba(#333, 0.1)
  .rich-text-editor-toolbar-button-insert-link
    position: relative
    z-index: 1
    display: inline-block
    &-input
      position: absolute
      width: 500px
      top: 24px
      z-index: 1
      display: none
      &.is-show
        display: block
    .insert-link-error-message
      display: none
      margin-left: 10px
      &.is-show
        display: inline-block
  .rich-text-editor-body
    color: #555
    font-size: 14px
    line-height: 1.5
    h1, h2, h3, h4, h5
      line-height: 1.5
      font-weight: normal
      color: #333
    h1
      font-size: $heading1-font-size
    h2
      font-size: $heading2-font-size
    h3
      font-size: $heading3-font-size
    h4
      font-size: $heading4-font-size
    h5
      font-size: $heading5-font-size
    ul, ol
      line-height: $list-line-height
    blockquote
      padding: 0px 15px
      margin: 25px 0
      font-size: 18px
      border-left: 2px solid $blockquote-border-left-color
      line-height: 1.5
    .checkable-list-item
      list-style: none
      transform: translateX(-1.5em)
    .checkable-list-item-body
      position: relative
    .checkable-list-item-checkbox
      position: absolute
      input
        width: 20px
        height: 20px
        border: 1px solid #d5cdcd
        background-color: white
        border-radius: 50%
        vertical-align: middle
        cursor: pointer
        &:checked
          border-color: #009cd6
          background-color: rgba(0, 174, 239, 0.8)
      &.is-checked + .checkable-list-item-text
        text-decoration: line-through
        color: #d6d6d6
    .checkable-list-item-text
      padding-left: 28px
    .iframe-placeholder
      -webkit-user-select: none
      user-select: none
  .DraftEditor-root
    height: 100%
    max-height: none
    min-height: 100vh
    overflow: auto
    padding: 0 10px 18px 10px
    position: relative
    z-index: 1
    cursor: text
    .link, .download-link
      color: #00aeef
      text-decoration: underline
    a
      cursor: text
      &:hover,
      &:focus
        color: #00aeef
        text-decoration: none
  .public-DraftStyleDefault-ul:first-child,
  .public-DraftStyleDefault-ol:first-child,
  h1:first-child,
  h2:first-child,
  h3:first-child,
  h4:first-child,
  h5:first-child
    margin-top: 0
