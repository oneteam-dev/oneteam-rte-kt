<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="img"/>
            <Button
                android:id="@+id/fileButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="file"/>
            <Button
                android:id="@+id/h1Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="h1"/>
            <Button
                android:id="@+id/h2Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="h2"/>
            <Button
                android:id="@+id/h3Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="h3"/>
            <Button
                android:id="@+id/h4Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="h4"/>
            <Button
                android:id="@+id/h5Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="h5"/>
            <Button
                android:id="@+id/boldButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="bold"/>
            <Button
                android:id="@+id/italicButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="italic"/>
            <Button
                android:id="@+id/codeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="code"/>
            <Button
                android:id="@+id/quoteButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="quote"/>
            <Button
                android:id="@+id/strikeThroughButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="strike"/>
            <Button
                android:id="@+id/checkListButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="check"/>
            <Button
                android:id="@+id/listButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="list"/>
            <Button
                android:id="@+id/orderedListButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="olist"/>
            <Button
                android:id="@+id/insertLinkButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="ilink"/>
            <Button
                android:id="@+id/removeLinkButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="rlink"/>
            <Button
                android:id="@+id/iframeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="iframe"/>
            <Button
                android:id="@+id/codeBlockButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="bcode"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>