<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp">
            <ImageButton
                android:id="@+id/headingButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/ic_heading"
                android:background="#ffffff"/>
            <ImageButton
                android:id="@+id/boldButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bold"
                android:background="#ffffff"/>
            <ImageButton
                android:id="@+id/listButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_list_ul"
                android:background="#ffffff"/>
            <ImageButton
                android:id="@+id/orderedListButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_list_ol"
                android:background="#ffffff"/>
            <ImageButton
                android:id="@+id/checkListButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_checkbox"
                android:background="#ffffff"/>
            <ImageButton
                android:id="@+id/linkButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_links"
                android:background="#ffffff"/>
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_photo"
                android:background="#ffffff"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>